<!DOCTYPE HTML>
<html>
<head>
    <title>{% block title %}Bienvenue sur le site{% endblock %}</title>

    {% block stylesheets %}
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        {# Liste des assets #}
        <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}">
        <script src="{{ asset('js/jquery.min.js') }}"></script>
        <script src="{{ asset('js/bootstrap.js') }}"></script>
    {% endblock %}
    {% block javascripts_head %}
        {# Liste des scripts en haut de page #}
    {% endblock %}
</head>
<body>
<div class="header-container">
    {% block page_header %}
        <header class="wrapper clearfix">
            {% block banner %}
              {# Banni√®re/Logo/Texte/etc... #}
            {% endblock %}
            {% block menu %}
                <nav>
                    <ul>
                        <li>Choix 1</li>
                    </ul>
                    <ul>
                        <li>Choix 2</li>
                    </ul>
                    <ul>
                        <li>Choix 3</li>
                    </ul>
                    <ul>
                        <li>Choix 4</li>
                    </ul>
                </nav>
            {% endblock %}
        </header>
    {% endblock %}
</div>


<div class="main-container">
    <div class="main wrapper clearfix">
        <div id="corps">
            {% block body %}
                <article>
                    <header>
                        <h1>Welcome!</h1>
                    </header>
                    <section>
                        <p>Bienvenu sur le site FFN Csi.</p>
                    </section>
                </article>
            {% endblock %}
        </div>
    </div> <!-- #main -->
</div> <!-- #main-container -->
<div class="footer-container">
    {% block page_footer %}
        <footer class="wrapper">
            <h6>For Ort'Sup by 3-Csi {{ 'now'|date('Y') }}</h6>
        </footer>
    {% endblock %}
</div>
{% block javascripts_foot %}
    {# Liste des scripts en pied de page #}
{% endblock %}
</body>
</html>