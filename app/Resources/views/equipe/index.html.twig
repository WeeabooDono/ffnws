{% extends 'base.html.twig' %}

{% block body %}
    <h1>Equipes list</h1>

    <table>
        <thead>
            <tr>
                <th>OD</th>
                <th>Nom</th>
                <th>Club</th>
                <th>Datecreation</th>
                <th>Isactif</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for equipe in equipes %}
            <tr>
                <td><a href="{{ path('equipe_show', { 'equipe_id': equipe.id }) }}">{{ equipe.id }}</a></td>
                <td>{{ equipe.nom }}</td>
                <td><a href="{{ path('club_show', { 'club_id': equipe.club.id }) }}">{{ equipe.club.nom }}</a></td>
                <td>{% if equipe.dateCreation %}{{ equipe.dateCreation|date('Y-m-d') }}{% endif %}</td>
                <td>{% if equipe.isActif %}Yes{% else %}No{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('equipe_show', { 'equipe_id': equipe.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('equipe_edit', { 'equipe_id': equipe.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('equipe_new') }}">Create a new equipe</a>
        </li>
    </ul>
{% endblock %}
