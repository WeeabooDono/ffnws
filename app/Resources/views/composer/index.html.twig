{% extends 'base.html.twig' %}

{% block body %}
    <h1>Composers list</h1>

    <table>
        <thead>
            <tr>
                <th>Idpersonne</th>
                <th>Idequipe</th>
                <th>IsActif</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for composer in composers %}
            <tr>
                <td><a href="{{ path('personne_show', { 'idPersonne': composer.idPersonne.idPersonne }) }}">{{ composer.idPersonne.nom }}</a></td>
                <td><a href="{{ path('equipe_show', { 'idEquipe': composer.idEquipe.idEquipe }) }}">{{ composer.idEquipe.nom }}</a></td>
                <td>{{ composer.isActif }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('composer_show', { 'idEquipe': composer.idEquipe.idEquipe, 'idPersonne': composer.idPersonne.idPersonne }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('composer_edit', { 'idEquipe': composer.idEquipe.idEquipe, 'idPersonne': composer.idPersonne.idPersonne }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('composer_new') }}">Create a new composer</a>
        </li>
    </ul>
{% endblock %}
