{% extends 'base.html.twig' %}

{% block body %}
    <h1>Utilisateurs list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Login</th>
                <th>Pwd</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for utilisateur in utilisateurs %}
            <tr>
                <td><a href="{{ path('utilisateur_show', { 'personne_id': utilisateur.personne.id }) }}">{{ utilisateur.personne.id }}</a></td>
                <td><a href="{{ path('personne_show', { 'personne_id': utilisateur.personne.id }) }}">{{ utilisateur.personne.nom }} {{ utilisateur.personne.prenom }}</a></td>
                <td>{{ utilisateur.username }}</td>
                <td>•••••••••••••••••••••••••••••••</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('utilisateur_show', { 'personne_id': utilisateur.personne.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('utilisateur_edit', { 'personne_id': utilisateur.personne.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('utilisateur_new') }}">Create a new utilisateur</a>
        </li>
    </ul>
{% endblock %}
